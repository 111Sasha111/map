#include <iostream>
#include <fstream>
#include <string>
#include <map>

using namespace std;

int main() {
    map<string, string> dictionary;

    dictionary["apple"] = "яблоко";
    dictionary["cat"] = "кот";
    dictionary["dog"] = "собака";

    while (true) {
        int choice;
        cout << "Выберите действие:\n";
        cout << "1. Ввести английское слово и получить русский перевод\n";
        cout << "2. Выйти и сохранить словарь\n";
        cin >> choice;

        if (choice == 1) {
            string engWord;
            cout << "Введите английское слово: ";
            cin >> engWord;

            if (dictionary.find(engWord) != dictionary.end()) {
                cout << "Русский перевод: " << dictionary[engWord] << "\n";
            } else {
                cout << "Слово не найдено в словаре.\n";
            }
        } else if (choice == 2) {
            ofstream outputFile("slovar.txt");
            for (const auto& entry : dictionary) {
                outputFile << entry.first << " " << entry.second << "\n";
            }
            outputFile.close();
            cout << "Словарь сохранен в файл 'slovar.txt'.\n";
            break;
        } else {
            cout << "Неправильный выбор, попробуйте снова.\n";
        }
    }

    return 0;
}
